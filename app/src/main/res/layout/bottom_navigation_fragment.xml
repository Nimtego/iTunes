<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/status_bar_light_color"
            app:elevation="0dp"
            app:layout_behavior="com.nimtego.plectrum.presentation.ui.widget.behavior.AppBarLayoutBehaviorFix">

            <android.support.v7.widget.Toolbar
                android:id="@+id/tool_bar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:minHeight="?attr/actionBarSize"
                app:contentInsetEnd="16dp"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetStart="16dp"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll|snap|enterAlways"
                app:popupTheme="@style/MyMaterialTheme.Base">

                    <android.support.v7.widget.SearchView
                        android:id="@+id/search_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@drawable/rounded_shape_for_search_view"
                        android:paddingStart="-16dp"
                        android:gravity="start"
                        app:iconifiedByDefault="false"
                        app:queryBackground="@null"
                        app:queryHint="Введите интересующий вопрос..."
                        app:searchIcon="@drawable/ic_search_icon"
                        app:theme="@style/AppSearchView" />

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <FrameLayout
            android:id="@+id/bottom_navigation_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_vertical"
            android:background="@color/color_background_dark"
            android:focusableInTouchMode="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

        <com.aurelhubert.ahbottomnavigation.AHBottomNavigation
            android:id="@+id/bottom_navigation_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/color_bottom_sheet_navigation_bar" />
    </android.support.design.widget.CoordinatorLayout>
</FrameLayout>

